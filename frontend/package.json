		"@testing-library/user-event": "^7.1.2",
		"@types/dompurify": "^2.0.1",
		"@types/he": "^1.1.1",
		"@types/highlight.js": "^9.12.3",
		"@types/jest": "^25.1.1",
		"@types/markdown-it": "^0.0.9",
		"@types/node": "^12.0.0",
		"@types/react": "^16.9.19",
		"@types/react-dom": "^16.9.5",
		"@types/react-helmet": "^5.0.15",
		"@types/react-router-dom": "^5.1.3",
		"@types/yup": "^0.26.30",
		"bootstrap": "^4.3.1",
		"buffer": "^5.4.0",
		"comlink": "^4.2.0",
		"dompurify": "^2.0.8",
		"fast-check": "^1.22.1",
		"flatten-vertex-data": "^1.0.2",
		"formik": "^1.5.7",
		"gulp": "^4.0.2",
		"gulp-brotli": "^1.2.2",
		"gulp-gzip": "^1.4.2",
		"gulp-imagemin": "^7.1.0",
		"gulp-imageoptim": "^1.0.9",
		"he": "^1.2.0",
		"highlight.js": "^9.18.1",
		"html-react-parser": "^0.10.1",
		"load-bmfont": "^1.4.0",
		"markdown-it": "^10.0.0",
		"monaco-editor": "0.19.2",
		"node-sass": "^7.0.0",
		"qrcode-generator": "^1.4.3",
		"react": "^16.13.1",
		"react-bootstrap": "^1.0.0",
		"react-dom": "^16.13.1",
		"react-helmet": "^5.2.1",
		"react-redux": "^7.1.0",
		"react-router-dom": "^5.0.1",
		"react-scripts": "3.0.1",
		"react-three-fiber": "^4.0.12",
		"reactour": "^1.15.0",
		"styled-components": "^4.0.0",
		"three": "0.113.0",
		"typescript": "~3.7.2",
		"uncontrollable": "^7.0.0",
		"worker-loader": "^2.0.0",
		"yup": "^0.27.0"
	},
	"scripts": {
		"start": "react-app-rewired start",
		"deploy": "cd .. && yarn deploy",
		"build": "react-app-rewired build && yarn sw-epilog && yarn imagemin && yarn brotli && yarn gzip",
		"sw-epilog": "cat src/sw-epilog.js >> build/service-worker.js",
		"brotli": "gulp brotli",
		"gzip": "gulp gzip",
		"imagemin": "gulp imagemin",
		"test": "react-app-rewired test --env=jsdom",
		"eject": "react-scripts eject",
		"type-test": "watch \"yarn tsc --noEmit --p tsconfig.json\" src",
		"ts-node": "node_modules/.bin/ts-node -O \"{\\\"module\\\": \\\"commonjs\\\"}\"",
		"update-components": "yarn ts-node bin/updateComponents.ts",
		"create-component": "yarn ts-node bin/makeComponent.ts Montaan",
		"create-filesystem": "yarn ts-node bin/makeComponent.ts -t filesystem Montaan/Filesystems",
		"create-fileview": "yarn ts-node bin/makeComponent.ts -t fileview Montaan/FileViews"
	},
	"eslintConfig": {
		"extends": "react-app"
	},
	"husky": {
		"hooks": {
			"post-checkout": "if [[ $HUSKY_GIT_PARAMS =~ $1 ]]; then yarn install --frozen-lockfile; fi",
			"post-merge": "yarn install --frozen-lockfile",
			"post-rebase": "yarn install",
			"pre-commit": "yarn tsc --noEmit --p tsconfig.json && yarn test --coverage --watchAll=false && lint-staged"
		}
	},
	"jest": {
		"moduleNameMapper": {
			"^worker-loader!": "<rootDir>/__mocks__/workerMock.ts"
		},
		"coverageThreshold": {
			"global": {
				"branches": 15,
				"functions": 15,
				"lines": 15,
				"statements": 15
			}
		}
	},
	"lint-staged": {
		"src/**/*.{js,jsx,ts,tsx,json}": [
			"eslint --fix",
			"yarn update-components"
		],
		"src/**/README.md": [
			"yarn update-components"
		],
		"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
			"prettier --write"
		]
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"@types/mustache": "^4.0.0",
		"customize-cra": "^0.9.1",
		"customize-cra-react-refresh": "^1.0.1",
		"husky": "^4.2.5",
		"lint-staged": ">=10",
		"mustache": "^4.0.0",
		"nodemon": "^2.0.2",
		"prettier": "1.19.1",
		"react-app-rewired": "^2.1.5",
		"readline-sync": "^1.4.10",
		"ts-node": "^8.6.2"
	}
}
